<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/layout_personinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/shape_linearlayout_lines"
        android:layout_margin="10dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_personal_info"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:id="@+id/tv_personal_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/iv_personal_info"
                android:layout_marginLeft="10dp"
                android:hint="用户名:"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_personal_usercount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="手机号:"
                android:textSize="15sp"
                app:layout_constraintLeft_toRightOf="@id/iv_personal_info"
                app:layout_constraintTop_toBottomOf="@id/tv_personal_username"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="10dp"
                />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_config"
        android:background="@drawable/shape_linearlayout_lines"
        app:layout_constraintTop_toBottomOf="@id/layout_personinfo"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:showDividers="middle"
        android:dividerPadding="4dp"
        android:divider="@drawable/shape_lines"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_personal_config"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:text="设置"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@+id/iv_personal_config"
                />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_personal_account"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:text="账户信息"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@+id/iv_personal_account"
                />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_linearlayout_lines"
        app:layout_constraintTop_toBottomOf="@id/layout_config"
        android:orientation="vertical"
        android:showDividers="middle"
        android:dividerPadding="4dp"
        android:divider="@drawable/shape_lines">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_personal_history"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:text="历史记录"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@+id/iv_personal_history"
                />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_personal_fav"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:text="我的收藏"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_personal_fav"
            />
        </android.support.constraint.ConstraintLayout>


    </LinearLayout>
    <Button
        android:id="@+id/btn_personal_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:text="退出登录"
        android:textSize="18sp"
        android:background="@drawable/btn_selector_red"/>
</android.support.constraint.ConstraintLayout>